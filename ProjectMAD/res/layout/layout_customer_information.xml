<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layCustomerInformationName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txtCustomerInformationNameLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name: " />
        
        <TextView
            android:id="@+id/txtCustomerInformationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name" />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/layCustomerInformationPhone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txtCustomerInformationPhoneLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone: " />
        
        <TextView
            android:id="@+id/txtCustomerInformationPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layCustomerInformationAddress"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
		
        <TextView
            android:id="@+id/txtCustomerInformationAddressLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address: " />
        
        <TextView
            android:id="@+id/txtCustomerInformationAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address" />
    </LinearLayout>
	
    <LinearLayout
        android:id="@+id/layCustomerInformationButtons"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnCustomerInformationDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete" />
        
        <Button
            android:id="@+id/btnCustomerInformationEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit" />
    </LinearLayout>
</LinearLayout>